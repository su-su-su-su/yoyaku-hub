- max_res = @reservation_limits[slot_idx].to_i
- current_count = @reservation_counts[slot_idx].to_i
- remaining = (max_res - current_count).clamp(0, 2)

= button_to "▲", stylists_reservation_limits_path(date: @date.strftime("%Y-%m-%d"), slot: slot_idx, direction: 'up'),
  data: { turbo_frame: "slot-limit-#{slot_idx}" }, method: :patch

= remaining

= button_to "▼", stylists_reservation_limits_path(date: @date.strftime("%Y-%m-%d"), slot: slot_idx, direction: 'down'),
  data: { turbo_frame: "slot-limit-#{slot_idx}" }, method: :patch
